{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "prettier"
    ],
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "curly": "error",
        "prettier/prettier": [
            "warn",
            {
                "plugins": ["@trivago/prettier-plugin-sort-imports"],
                "trailingComma": "es5",
                "semi": true,
                "tabWidth": 2,
                "singleQuote": true,
                "printWidth": 120,
                "bracket-pacing": true,
                "bracketSameLine": false,
                "arrowParens": "always",
                "importOrder": ["^[./]"],
                "importOrderSeparation": true
            }
        ],
        "@typescript-eslint/strict-boolean-expressions": "off",
        "@typescript-eslint/explicit-function-return-type": "off"
    }
}
